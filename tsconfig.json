{
	"compilerOptions": {
		"jsx": "preserve",
		"baseUrl": "./",
    "outDir": "./dist",
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"allowJs": true,
		"declaration": true,
		"declarationDir": "./dist/types",
		"emitDeclarationOnly": true,
		"removeComments": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"./**/*.ts",
		"./**/*.tsx"
	],
}